<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>車両情報一覧</title>
</head>
<body>
    <%- include("../header.ejs")%>
    <main class="w-100 my-0 mx-auto d-flex flex-column justify-content-center mt-4">
        <h2 class="mx-auto w-75 mb-3">車両販売トップ</h2>
        <article class="mx-auto w-75 mb-5">
            <div class="card">
                <div class="card-header">新規案件登録</div>
                <div class="card-body p-5">
                    <div class="d-flex justify-content-center w-100 mt-3">
                        <img class="card-img-top w-75" src="../../img/car_img/<%= carImgPath %>" alt="car_icon">
                    </div>
                    <div class="row mt-5">
                        <div class="col-6">
                            <h5 class="card-title">車名:<%= carName %></h5>
                            <p class="card-text">
                                開始価格:<sapn><%= startPrice %></sapn>円<br>
                                終了まであと:<sapn id="remain"></sapn><br>
                                終了日時:<sapn><%= endTime %></sapn><br>
                            </p>
                        </div>
                        <div class="col-6">
                            <form action="">
                                <div class="rounded bg-primary text-light p-3 mb-3" id="nowPriceDisplay">
                                    現在の価格：<%= nowPrice %>円
                                </div>
                                <label for="formName" class="form-label">追加金額</label>
                                <div class="input-group mb-3">
                                    <input id="price" class="form-control" type="text" value="<%= nowPrice %>" disabled>
                                    <span class="input-group-text">円</span>
                                </div>
                                <div class="mb-4">
                                    <button type="button" class="btn btn-success" onclick="countUp()">+10,000円</button>
                                    <button type="button" class="btn btn-success" onclick="countDown()">-10,000円</button>
                                </div>
                                <div>
                                    <button class="btn btn-primary" id="submit" type="button">決定する</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </article>
    </main>
    <!-- socket.io CDN -->
    <script src="/socket.io/socket.io.js"></script>
    <script>
        const userId = <%= intUserId %>;
        let basePrice = <%= nowPrice %>;
        let nowPrice = basePrice;
        const price = document.getElementById("price");
        const nowPriceDisplay = document.getElementById("nowPriceDisplay");

        function countUp(){
            nowPrice += 10000;
            price.value = nowPrice;
        }
        function countDown(){
            if(!(nowPrice <= basePrice)){
                nowPrice -= 10000;
                price.value = nowPrice;
            }
        }
        var socket = io();

        const submitButton = document.getElementById("submit");
        submitButton.addEventListener("click",function(){
            socket.emit("updatePrice", {"price":price.value,"userId":userId});
        });

        socket.on("updatePrice",function(data){
            basePrice = Number(data.price);
            nowPrice = Number(data.price);
            price.value = data.price;
            nowPriceDisplay.textContent = `現在の価格：${data.price}円`
            alert("価格を更新しました");
        })

        socket.on("updatePriceFail",function(data){
            alert(data.errorMsg);
        })

        socket.on('timeOver',function(){
            alert("こちらのオークションは終了しました。");
            window.location.href = '/client/shop/top';
        });

        socket.on("timer",function(data){
            document.querySelector("#remain").textContent = data.remain
        });
    </script>
</body>
</html>