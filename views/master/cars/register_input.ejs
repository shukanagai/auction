<!DOCTYPE html>
<html lang="ja">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>車両登録</title>
</head>

<body>
    <main class="mx-auto w-75">
        <h2>車両登録</h2>
        <article>
            <h3 class="d-none">車両登録フォーム</h3>
            <form action="register_input" method="post" enctype="multipart/form-data">
                <section class="mb-3 w-100">
                    <label class="form-label">画像</label>
                    <input type="file" class="form-control" name="carImg" required>
                </section>

                <section class="mb-3 w-100">
                    <label class="form-label">車種名</label>
                    <input type="text" class="form-control" name="carName" required>
                </section>

                <section class="form-group mb-3">
                    <label for="select1 mb-3">メーカー</label>
                    <select id="select1" name="makerId" class="form-select w-100" required>
                        <option selected>選択して下さい</option>
                        <!-- メーカーDAOからレンダリング -->
                        <% makerArr.forEach( maker => { %>
                            <option value="<%= maker.M_id %>"><%= maker.M_name %></option>
                        <% }); %>
                    </select>
                </section>

                <section class="form-group mb-3">
                    <label for="select1 mb-3">車両タイプ</label>
                    <select id="select1" name="bodyTypeId" class="form-select w-100" required>
                        <option selected>選択して下さい</option>
                        <!-- bodytypeDAOからレンダリング -->
                        <% bodyTypeArr.forEach( bodyType => { %>
                            <option value="<%= bodyType.B_id %>"><%= bodyType.B_name %></option>
                        <% }); %>
                    </select>
                </section>

                <section class="form-group mb-3">
                    <label for="select1 mb-3">定員</label>
                    <select id="select1" name="passenger" class="form-select w-100" required>
                        <option selected>選択して下さい</option>
                        <option value="1">1人</option>
                        <option value="2">2人</option>
                        <option value="3">3人</option>
                        <option value="4">4人</option>
                        <option value="5">5人</option>
                        <option value="6">6人</option>
                        <option value="7">7人</option>
                        <option value="8">8人</option>
                    </select>
                </section>

                <!-- <section class="form-group mb-3">
                    <label for="select1 mb-3">走行年数</label>
                    <select id="select1" name="drivingYears" class="form-select w-100" required>
                        <option selected>選択して下さい</option>
                        <option value="1">1年</option>
                        <option value="2">2年</option>
                        <option value="3">3年</option>
                        <option value="4">4年</option>
                        <option value="5">5年</option>
                    </select>
                </section> -->

                <section class="form-group mb-3">
                    <label class="form-label">走行距離</label>
                    <input type="number" class="form-control" name="mileage" required>
                </section>

                <!-- <section class="mb-3 w-100">
                    <label class="form-label">ベースカラー</label>
                    <input type="text" class="form-control" name="baseColor" required>
                </section> -->

                <section class="form-group mb-3">
                    <label for="select1 mb-3">ベースカラー</label>
                    <select id="select1" name="colorId" class="form-select w-100" required>
                        <option selected>選択して下さい</option>
                        <!-- ColorSystemDaoからレンダリング -->
                        <% colorArr.forEach( color => { %>
                            <option value="<%= color.C_id %>"><%= color.C_name %></option>
                        <% }); %>
                        <!-- <option value="1">1年</option>
                        <option value="2">2年</option>
                        <option value="3">3年</option>
                        <option value="4">4年</option>
                        <option value="5">5年</option> -->
                    </select>
                </section>

                <section class="mb-3 w-100">
                    <label class="form-label">開始日時</label>
                    <input type="datetime-local" class="form-control" name="startTime" required>
                </section>

                <section class="mb-3 w-100">
                    <label class="form-label">終了日時</label>
                    <input type="datetime-local" class="form-control" name="endTime" required>
                </section>

                <section class="mb-3 w-100">
                    <label class="form-label">開始価格</label>
                    <input type="number" class="form-control" name="startPrice" required>
                </section>

                <div class="mx-auto w-75">
                    <button class="btn btn-primary w-100 mx-auto" type="submit">確認画面へ</button>
                </div>
            </form>
        </article>
    </main>

</body>

</html>