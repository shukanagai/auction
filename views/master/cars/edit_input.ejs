<!DOCTYPE html>
<html lang="ja">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>車両編集</title>
</head>

<body>
    <%- include("../header.ejs")%>
    <main class="mx-auto w-75">
        <h2>車両編集</h2>
        <article>
            <h3 class="d-none">車両編集フォーム</h3>
            <form action="edit_input" method="post">
                <!-- <section class="mb-3 w-100">
                    <label class="form-label">画像</label>
                    <input type="file" class="form-control" name="carImg" required>
                </section> -->

                <section class="mb-3 w-100">
                    <label class="form-label">車種名</label>
                    <input type="text" class="form-control" name="carName" value="<%= carName %>" required>
                </section>

                <section class="form-group mb-3">
                    <label for="select1 mb-3">メーカー</label>
                    <select id="select1" name="makerId" class="form-select w-100" required>
                        <!-- メーカーDAOからレンダリング -->
                        <% makerArr.forEach( maker => { %>
                            <option value="<%= maker.M_id %>" <%= makerSelected == maker.M_id ? "selected" : "" %>><%= maker.M_name %></option>
                        <% }); %>
                    </select>
                </section>

                <section class="form-group mb-3">
                    <label for="select1 mb-3">車両タイプ</label>
                    <select id="select1" name="bodyTypeId" class="form-select w-100" required>
                        <!-- bodytypeDAOからレンダリング -->
                        <% bodyTypeArr.forEach( bodyType => { %>
                            <option value="<%= bodyType.B_id %>" <%= bodyTypeSelected == bodyType.B_id ? "selected" : "" %>><%= bodyType.B_name %></option>
                        <% }); %>
                    </select>
                </section>

                <section class="form-group mb-3">
                    <label for="select1 mb-3">定員</label>
                    <select id="select1" name="passenger" class="form-select w-100" required>
                        <% for (let i = 1; i < 9; i++) { %>
                            <option value="<%= i %>" <%= passengerSelected == i ? "selected" : "" %>><%= i %>人</option>
                        <% } %>
                    </select>
                </section>

                <section class="form-group mb-3">
                    <label class="form-label">走行距離</label>
                    <input type="number" class="form-control" name="mileage" value="<%= mileage %>" required>
                </section>

                <section class="form-group mb-3">
                    <label for="select1 mb-3">ベースカラー</label>
                    <select id="select1" name="colorId" class="form-select w-100" required>
                        <!-- ColorSystemDaoからレンダリング -->
                        <% colorArr.forEach( color => { %>
                            <option value="<%= color.C_id %>" <%= colorSelected == color.C_id ? "selected" : "" %>><%= color.C_name %></option>
                        <% }); %>
                    </select>
                </section>

                <section class="mb-3 w-100">
                    <label class="form-label">開始日時</label>
                    <input type="datetime-local" class="form-control" name="startTime" value="<%= startTime %>" required>
                </section>

                <section class="mb-3 w-100">
                    <label class="form-label">終了日時</label>
                    <input type="datetime-local" class="form-control" name="endTime" value="<%= endTime %>" required>
                </section>

                <section class="mb-3 w-100">
                    <label class="form-label">開始価格</label>
                    <input type="number" class="form-control" name="startPrice" value="<%= startPrice %>" required>
                </section>

                <div class="mx-auto w-75">
                    <button class="btn btn-primary w-100 mx-auto" type="submit">確認画面へ</button>
                </div>
            </form>
        </article>
    </main>

</body>

</html>